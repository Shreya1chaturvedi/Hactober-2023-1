#include <stdio.h>

// Function to convert decimal to binary using recursion
void dectobin(int decimal) {
    if (decimal == 0) {
        return;
    }

    dectobin(decimal / 2);  // Recursive call for quotient
    printf("%d", decimal % 2);  // Print remainder (0 or 1)
}

int main() {
    int decimal;

    // Input the decimal number
    printf("Enter a decimal number: ");
    scanf("%d", &decimal);

    if (decimal < 0) {
        printf("Please enter a non-negative decimal number.\n");
    } else {
        printf("Binary equivalent: ");
        if (decimal == 0) {
            printf("0");  // Special case for decimal 0
        } else {
            dectobin(decimal);
        }
        printf("\n");
    }

    return 0;
}
